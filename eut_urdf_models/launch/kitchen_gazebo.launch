<?xml version="1.0" encoding="UTF-8"?>

<launch>
  <arg name="world"  default="$(find eut_urdf_models)/worlds/eut_kitchen.world"/>  <!-- empty, small_office, ... (see ../worlds) -->
  <arg name="gui" default="true"/>
  <arg name="debug" default="false"/>
  <arg name="recording" default="false"/>
  <arg name="extra_gazebo_args" default=""/>
  <arg name="extra_gz_model_path" default=""/>
  <arg name="extra_gz_resource_path" default=""/>
  <arg name="paused" default="false"/>

  <arg name="path_to_pkg" default="/home/lucry_wsl20/catkin_ws/src/tesi_reuleaux_tiago" doc="pkg folder need to be included in the path to find the models"/>
  <!-- set env variables -->

  <env name="GAZEBO_MODEL_PATH" value="$(arg extra_gz_model_path):$(find pal_gazebo_worlds)/../pal_gazebo_worlds_private/models:$(find eut_urdf_models):$(find pal_gazebo_worlds)/models:$(optenv GAZEBO_MODEL_PATH)"/>
  <env name="GAZEBO_RESOURCE_PATH" value="$(arg extra_gz_resource_path):$(find pal_gazebo_worlds)/../pal_gazebo_worlds_private:$(find eut_urdf_models):$(find pal_gazebo_worlds):$(optenv GAZEBO_RESOURCE_PATH)"/>
  
  <env name="GAZEBO_RESOURCE_PATH" value="$(arg path_to_pkg)/eut_urdf_models/meshes"/>
  
  <!-- start up world -->
  <include file="$(find gazebo_ros)/launch/empty_world.launch">
    <!-- world_name is relative to directories in GAZEBO_RESOURCE_PATH-->
    <arg name="world_name" value="$(arg world)"/>
    <arg name="extra_gazebo_args" value="$(arg extra_gazebo_args)"/>
    <arg name="gui" value="$(arg gui)"/>
    <arg name="debug" value="$(arg debug)"/>
    <arg name="recording" value="$(arg recording)"/>
    <arg name="paused" value="$(arg paused)"/>
  </include>
</launch>
